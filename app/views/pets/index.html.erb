<h1>Lost Pets</h1>


<div class="row row-cols-1 row-cols-md-2 g-4">

  <% @pets.each do |pet| %>
    <div class="col">
      <div class="card">
        <img src="https://source.unsplash.com/random/200x100/?<%= pet.species %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= pet.description %></h5>
          <p class="card-text">
            Address: <%= pet.address %>
            Found at: <%= pet.found_at %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

</div>

<%= link_to 'I Found a lost pet', new_pet_path, class: 'btn btn-info btn-lg mt-5' %>
